{
  "name": "tw-reactjs-base",
  "version": "1.0.0",
  "description": "tailwind base for dev on reactjs",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode=development --open --hot --config=webpack.development.config.js",
    "dev": "webpack --mode development --watch --config=webpack.development.config.js",
    "build": "webpack --mode production --config=webpack.production.config.js & postcss ./src/init.css -o ./public/css/main.css",
    "build:css": "postcss ./src/init.css -o ./public/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thotenn/tw-reactjs-base.git"
  },
  "keywords": [
    "tw-reactjs-base"
  ],
  "author": "thotenn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thotenn/tw-reactjs-base/issues"
  },
  "homepage": "https://github.com/thotenn/tw-reactjs-base#readme",
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.0.23",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "css-loader": "^6.7.1", 
    "html-webpack-plugin": "^5.5.0",
    "postcss-cli": "^9.1.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
